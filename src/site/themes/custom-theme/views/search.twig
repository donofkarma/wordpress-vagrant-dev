{% extends 'base.twig' %}

{% block content %}
    <section>
        <article class="content-page content-page--search">
            <header class="content-page-header">
                <h1>{{ title }}</h1>
            </header>

            <section class="content-page-content">
                {% if posts %}
                    {% for post in posts %}
                        {% include 'partials/post-tease.twig' with { post:post } %}
                    {% endfor %}
                {% else %}
                    <p>No results found.</p>
                {% endif %}
            </section>
        </article>
    </section>
{% endblock %}
