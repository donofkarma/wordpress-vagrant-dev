<article class="post post--tease">
    <header class="post-header">
        <h2><a href="{{ post.permalink }}" title="Permalink to {{ post.title }}" rel="bookmark">{{ post.title }}</a></h2>
        <div class="author">
            By <a href="{{ post.author.path }}" title="See all of {{ post.author.name }} posts">{{ post.author.name }}</a> on <time datetime="{{ post.post_date|date('Y-m-d') }}">{{ post.post_date|date }}</time>
        </div>
    </header>

    <section class="post-content">
        {{ post.post_content|excerpt(30)|wpautop }}
    </section>
</article>
